<core:View height="100%" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified" controllerName="app.Student.ChildPages.Add">
  <Page>
    <customHeader>
      <Toolbar design="Solid">
        <Title text="Thêm mới thong tin hoc sinh" level="H3"/>
        <ToolbarSpacer />
        <Button icon="sap-icon://decline" tooltip="Đóng" press="closeDetailArea"/>
      </Toolbar>
    </customHeader>
    <content>
      <VBox class="sapUiSmallMargin">
        <f:SimpleForm
            id="workunitadd"
            editable="true"
            layout="ResponsiveGridLayout"
            labelSpanXL="3"
            labelSpanL="3"
            labelSpanM="3"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
            singleContainerFullSize="true">
          <f:content>
            <Label text="Họ và tên"/>
            <Input id="addname" maxLength="255"/>
            <Label text="Ngày sinh"/>
            <DatePicker id="adddob" placeholder="Enter Date..."/>
            <Label text="Địa chỉ"/>
            <Input id="addadr" maxLength="255"/>
            <Label text="Lớp"/>
            <Input id="addclass" maxLength="500"/>
            <Label text="Anh dai dien"/>
            <l:VerticalLayout>
              <u:FileUploader
                id="fileUploader"
                uploadOnChange="false"
                sendXHR="true"
                uploadUrl="https://localhost:9900/api/upload"
                uploadStart="onUploadStart"
                change="onChange"
                uploadComplete="handleUploadComplete">
              </u:FileUploader>
            </l:VerticalLayout>
          </f:content>
        </f:SimpleForm>
      </VBox>
      <VBox class="sapUiSmallMargin">

      </VBox>
    </content>
    <footer>
      <Toolbar active="true">
        <content>
          <ToolbarSpacer/>
          <Button text="Hoàn tất" type="Transparent" icon="sap-icon://accept" press="onSave" />
          <Button text="Đặt lại" type="Transparent" icon="sap-icon://reset" press="onClearForm" />
          <Button text="Hủy bỏ" type="Transparent" icon="sap-icon://cancel" press="closeDetailArea" />
        </content>
      </Toolbar>
    </footer>
  </Page>
</core:View>
